<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <ImageView
        android:id="@+id/imageviewrighthome"
        android:layout_width="224dp"
        android:layout_height="207dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/imv_right_Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebuttonlugares"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bottomright"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageviewlefthome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="96dp"
        android:src="@drawable/bottomleft"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebuttondanos"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textviewhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:contentDescription="@string/txt_bienvenida"
        android:text="@string/txt_bienvenida"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageviewlogohome"
        android:layout_width="221dp"
        android:layout_height="133dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/imv_logo_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewhome"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/imagebuttoninfo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/imagebuttoninfo_background"
        android:contentDescription="@string/imb_informacion"
        android:onClick="Informacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageviewlogohome"
        app:srcCompat="@drawable/informacion" />

    <ImageButton
        android:id="@+id/imagebuttondanos"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/imagebuttondanos_background"
        android:contentDescription="@string/imb_danos"
        android:onClick="Danos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebuttoninfo"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@drawable/danos" />

    <ImageButton
        android:id="@+id/imagebuttonbeneficios"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/imagebuttonbeneficios_background"
        android:contentDescription="@string/imb_beneficios"
        android:onClick="Beneficios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imagebuttoninfo"
        app:layout_constraintTop_toBottomOf="@+id/imageviewlogohome"
        app:srcCompat="@drawable/beneficios" />

    <ImageButton
        android:id="@+id/imagebuttonlugares"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/imagebuttonlugares"
        android:contentDescription="@string/imb_lugares"
        android:onClick="Lugares"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebuttonbeneficios"
        app:srcCompat="@drawable/lugares" />

</androidx.constraintlayout.widget.ConstraintLayout>

