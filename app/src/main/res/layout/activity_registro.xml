<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68F097"
    tools:context=".registroActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-26dp"
        android:layout_marginTop="-74dp"
        app:srcCompat="@drawable/top_registro" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="82dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:text="Registro"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/campocorreor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/bgsignin"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#737373" />

    <EditText
        android:id="@+id/campopassr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/bgsignin"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#737373" />

    <EditText
        android:id="@+id/campoapellidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="447dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/bgsignin"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Apellido"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#737373" />

    <EditText
        android:id="@+id/camponombrer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="378dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/bgsignin"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#737373" />

    <Button
        android:id="@+id/btnregistrarme"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="521dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/bgregistro"
        android:fontFamily="@font/poppinsbold"
        android:onClick="onClick"
        android:text="REGISTRARME"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="627dp"
        android:layout_marginEnd="95dp"
        android:alpha="0.7"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center"
        android:onClick="already"
        android:text="Ya tengo una cuenta"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</RelativeLayout>