<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".verPerfil">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/ver_miperfil"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="160dp"
        android:layout_marginTop="32dp"
        android:text="@string/ver_perfil"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/picture"
        android:layout_width="280dp"
        android:layout_height="146dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ver_miperfil" />

    <TextView
        android:id="@+id/perf_nombre"
        android:layout_width="259dp"
        android:layout_height="20dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/perf_edad"
        android:layout_width="259dp"
        android:layout_height="20dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="364dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/perf_sexo"
        android:layout_width="259dp"
        android:layout_height="20dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="412dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/perf_ciudad"
        android:layout_width="259dp"
        android:layout_height="20dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="460dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/perf_pensamiento"
        android:layout_width="261dp"
        android:layout_height="155dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="512dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnOpenCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="128dp"
        android:src="@drawable/ic_menu_camera"
        app:layout_constraintEnd_toEndOf="@+id/picture"
        app:layout_constraintTop_toBottomOf="@+id/picture" />

</androidx.constraintlayout.widget.ConstraintLayout>